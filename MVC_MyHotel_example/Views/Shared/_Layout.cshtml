<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Cabin:600,700|Lato:300,400" rel="stylesheet">
    <script src="https://use.fontawesome.com/086e19824e.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) -->

                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <i class="fa fa-bookmark" aria-hidden="true"></i>
                    <span class="m-symbol">M</span>BOOK 
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Hotels", "Index", "Hotels")</li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Reservations", "Index", "Reservations")</li>
                    }
                    @if (Request.IsAuthenticated && !User.IsInRole("Administrator"))
                    { 
                        <li>@Html.ActionLink("My reservations", "MyReservations", "Reservations")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            
            <div class="container">
                <div class="row">
                    
                    <div class="pull-right social-media">
                        <a href="#" class="social">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>

                        <a href="#" class="social">
                            <i class="fa fa-google-plus" aria-hidden="true"></i>
                        </a>

                        <a href="#" class="social">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>

                        <a href="#" class="social">
                            <i class="fa fa-youtube" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="left-text">
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </div>

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/smooth_scroll.js")
    @RenderSection("scripts", required: false)

</body>
</html>
